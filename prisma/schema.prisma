generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  avatar        String?
  bio           String?
  birth         String?
  createdAt     DateTime  @default(now())
  email         String?   @unique
  gender        String?
  id            Int       @default(autoincrement()) @id
  name          String?
  password      String?
  phone         String?   @unique
  updatedAt     DateTime?
  username      String?
  verifiedEmail Boolean   @default(false)
  verifiedPhone Boolean   @default(false)
}